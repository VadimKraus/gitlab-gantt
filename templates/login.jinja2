{% extends "layouts/app.jinja2" %}

{% block title %}登陆 | GitLab{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">设置登陆</div>

                    <div class="card-body">
                        <form method="POST" action="{{ url_for('login') }}">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}"/>
                            <div class="form-group row">
                                <label for="gitlab_url"
                                       class="col-sm-4 col-form-label text-md-right">GitLab URL：</label>

                                <div class="col-md-6">
                                    <input id="gitlab_url" type="text"
                                           class="form-control{{ ' is-invalid' if 'gitlab_url' in errors else '' }}"
                                           name="gitlab_url" required autofocus>

                                    {% if 'gitlab_url' in errors %}
                                        <span class="invalid-feedback">
                                        <strong>{{ errors['gitlab_url'] }}</strong>
                                    </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="token"
                                       class="col-md-4 col-form-label text-md-right">Private Token：</label>

                                <div class="col-md-6">
                                    <input id="token" type="text"
                                           class="form-control{{ ' is-invalid' if 'token' in errors else '' }}"
                                           name="token" required>

                                    {% if 'token' in errors %}
                                        <span class="invalid-feedback">
                                        <strong>{{ errors['token'] }}</strong>
                                    </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-6 offset-md-4">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="remember"> 记住我
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row mb-0">
                                <div class="col-md-8 offset-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        访问图表
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
