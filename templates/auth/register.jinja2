{% extends "layouts/app.jinja2" %}

{% block title %}注册 | Laravel{% endblock %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">注册</div>

                    <div class="card-body">
                        <form method="POST" action="{{ url_for('register.register') }}">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}"/>

                            <div class="form-group row">
                                <label for="name" class="col-md-4 col-form-label text-md-right">用户名：</label>

                                <div class="col-md-6">
                                    <input id="name" type="text"
                                           class="form-control{{ ' is-invalid' if 'name' in errors else '' }}"
                                           name="name" required autofocus>

                                    {% if 'name' in errors %}
                                        <span class="invalid-feedback">
                                        <strong>{{ errors['name'][0] }}</strong>
                                    </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="email"
                                       class="col-md-4 col-form-label text-md-right">电子邮件：</label>

                                <div class="col-md-6">
                                    <input id="email" type="email"
                                           class="form-control{{ ' is-invalid' if 'email' in errors else '' }}"
                                           name="email" required>

                                    {% if 'email' in errors %}
                                        <span class="invalid-feedback">
                                        <strong>{{ errors['email'][0] }}</strong>
                                    </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password"
                                       class="col-md-4 col-form-label text-md-right">密码：</label>

                                <div class="col-md-6">
                                    <input id="password" type="password"
                                           class="form-control{{ ' is-invalid' if 'password' in errors else '' }}"
                                           name="password" required>

                                    {% if 'password' in errors %}
                                        <span class="invalid-feedback">
                                        <strong>{{ errors['password'][0] }}</strong>
                                    </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password-confirm"
                                       class="col-md-4 col-form-label text-md-right">确认密码：</label>

                                <div class="col-md-6">
                                    <input id="password-confirm" type="password" class="form-control"
                                           name="password_confirmation" required>
                                </div>
                            </div>

                            <div class="form-group row mb-0">
                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        注册
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
